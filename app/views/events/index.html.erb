<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Event date</th>
      <th>Type</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.location %></td>
        <td><%= event.event_date.strftime('%m/%d/%Y')%></td>
        <td><%= event.cost_type %></td>
        <% if event.event_date < Time.now %>
        <td><%= event.active = false %></td>
        <% else %>
        <td><%= event.active = true %></td>
        <% end %>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<strong><p> upcoming events </p></strong>
<% @upcoming_events.each do |event| %>
  <p><%= event.name %></p>
    <p><%= event.event_date.strftime('%m/%d/%Y') %></p>
    <p><%= event.description %></p>
  <% end %>
<strong><p> past events</p></strong>
<% @previous_events.each do |event| %>
  <p><%= event.name %></p>
    <p><%= event.event_date.strftime('%m/%d/%Y') %></p>
    <p><%= event.description %></p>
  <% end %>

  <br>


<%= link_to 'New Event', new_event_path %>
